<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="univ.pr.nj.keewitz.MainActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/defaut_user_photo" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="112dp"
        android:layout_height="29dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:text="@string/default_user_name"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="141dp"
        android:layout_height="59dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mdl_logo" />

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="405dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical|center_horizontal|center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:onClick="onMapButtonClick"
            android:text="@string/home_page_maFac"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:onClick="onTimeTableButtonClick"
            android:text="@string/home_page_mesCours"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:onClick="onSettingsButtonClick"
            android:text="@string/home_page_parametres"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:onClick="onScanQRCode"
            android:text="@string/home_page_scan"
            android:textSize="24sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
