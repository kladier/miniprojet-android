<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="univ.pr.nj.keewitz.MainActivity">

    <LinearLayout
        android:layout_width="355dp"
        android:layout_height="405dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical|center_horizontal|center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:onClick="onMapButtonClick"
            android:text="@string/home_page_maFac"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:onClick="onTimeTableButtonClick"
            android:text="@string/home_page_mesCours"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="280dp"
            android:layout_height="70dp"
            android:onClick="onSettingsButtonClick"
            android:text="@string/home_page_parametres"
            android:textSize="24sp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
